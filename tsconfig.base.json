{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [],
    "paths": {
      "screen-ui": ["packages/screen-ui"],
      "@screen-ui/components": ["packages/components"],
      "@screen-ui/components/*": ["packages/components/*"],
      "@screen-ui/utils": ["packages/utils"],
      "@screen-ui/utils/*": ["packages/utils/*"],
      "@screen-ui/directives": ["packages/directives"],
    },
    "preserveSymlinks": true
  }
}